<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.raqib.instadate.Customization">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/customizationToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Customize Experience"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/imageButtonTopFeeds"
            android:src="@drawable/national_icon"
            android:onClick="topNewsSubscribed"
            android:layout_weight="1"
            />
        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/science_icon"
            android:id="@+id/imageButtonScience"
            android:onClick="scienceSubscribed"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/sports_icon"
            android:id="@+id/imageButtonSports"
            android:onClick="sportsSubscribed"
            android:layout_weight="1" />
        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/health_icon"
            android:id="@+id/imageButtonHealth"
            android:onClick="healthSubscribed"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/technology_icon"
            android:id="@+id/imageButtonTechnology"
            android:onClick="technologySubscribed"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/international_icon"
            android:id="@+id/imageButtonInternationalFeeds"
            android:onClick="internationalSubscribed"
            android:layout_weight="1" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">


            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/local_icon"
                android:id="@+id/imageButtonLocal"
                android:onClick="localSubscribed"
                android:layout_weight="1" />
            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/gadgets_icon"
                android:id="@+id/imageButtonGadgetsFeeds"
                android:onClick="gadgetsSubscribed"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageButtonTrendingFeeds"
                android:src="@drawable/trending_icon"
                android:onClick="trendingSubscribed"
                android:layout_weight="1" />
            <ImageButton
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageButtonMiscellaneousFeeds"
                android:src="@drawable/miscellaneous_icon"
                android:onClick="miscellaneousSubscribed"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
