<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient"
    tools:context="com.example.raqib.instadate.RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/layere_mail"
                    android:layout_gravity="center"/>

                <customfonts.MyEditText
                    android:id="@+id/UserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/action_RegisterEmailHint"
                    android:textColorHint="#d9e5f3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:background="#00000000"
                    android:textSize="16sp"
                    android:inputType="textEmailAddress"
                    android:textColor="#fff"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp"
                android:background="#4a5a71"> </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/layer_user"
                    android:layout_gravity="center"/>

                <customfonts.MyEditText
                    android:id="@+id/UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/action_RegisterNameHint"
                    android:textColorHint="#d9e5f3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:background="#00000000"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:textColor="#fff"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp"
                android:background="#4a5a71"> </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/layer0"
                    android:layout_gravity="center"/>


                <customfonts.MyEditText
                    android:id="@+id/UserPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/action_RegisterPasswordHint1"
                    android:textColorHint="#d9e5f3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:background="#00000000"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp"
                android:layout_height="1dp"
                android:background="#4a5a71">
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/layer0"
                    android:layout_gravity="center"/>

                <customfonts.MyEditText
                    android:id="@+id/UserPasswordConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/action_RegisterPasswordHint2"
                    android:textColorHint="#d9e5f3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:background="#00000000"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:textColor="#fff"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp"
                android:layout_height="1dp"
                android:layout_gravity="top"
                android:background="#4a5a71">
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginBottom="420dp"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/main_image"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginBottom="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:id="@+id/RegisterButton"
                android:layout_width="wrap_content"
                android:text="@string/action_RegisterButton"
                android:textColor="#707070"
                android:gravity="center"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:background = "@drawable/roundedbutton"
                android:layout_marginTop="4dp"
                android:layout_height="40dp" />


            <customfonts.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/or"
                android:layout_marginTop="4dp"
                android:textColor="#ffffff"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                />


            <com.google.android.gms.common.SignInButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/googleSignInButton"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.95">
            </com.google.android.gms.common.SignInButton>


        </LinearLayout>



        <customfonts.MyTextView
            android:id="@+id/LoginHereVirtual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/already_registered"
            android:textColor="#bdbdbd"
            android:textSize="20sp"
            android:layout_marginBottom="2dp"
            />

        <customfonts.MyTextView
            android:id="@+id/LoginHere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/action_AlreadyRegistered"
            android:textColor="#f5f5f5"
            android:textSize="22sp"
            android:layout_marginBottom="30dp"/>


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>

