<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:openDrawer="start"
    android:id="@+id/myDrawerLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">


<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mainNewsScreen"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorMaterial"
                app:layout_scrollFlags="scroll|enterAlways"
                />


            <com.miguelcatalan.materialsearchview.MaterialSearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:searchBackground="@color/colorMaterial"
                app:searchSuggestionBackground="@color/colorMaterial"
                app:searchCloseIcon="@drawable/ic_action_navigation_close_inverted"
                app:searchBackIcon="@drawable/ic_action_navigation_arrow_back_inverted"
                app:searchSuggestionIcon="@drawable/ic_suggestion"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainNewsLinearLayout"
            android:orientation="vertical">

            <com.example.raqib.instadate.CustomTabLayout
                android:id="@+id/tabHost"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:tabIndicatorHeight="2dp"
                android:background="@color/colorMaterial"
                app:tabIndicatorColor="#000000"
                app:tabTextColor="#000000"
                app:tabSelectedTextColor="#ffffff"
                app:tabMode="scrollable"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                >

                <android.support.v4.widget.SwipeRefreshLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/swipeRefreshInMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:filterTouchesWhenObscured="true"
                    >

                    <android.support.v4.view.ViewPager
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        >
                    </android.support.v4.view.ViewPager>

                </android.support.v4.widget.SwipeRefreshLayout>

                <ImageButton
                    android:layout_marginTop="10dp"
                    android:id="@+id/floatingButton"
                    android:layout_width="140dp"
                    android:layout_height="31dp"
                    android:foregroundGravity="center_horizontal"
                    android:layout_marginLeft="120dp"
                    android:src="@drawable/new_feeds"
                    android:layout_marginStart="120dp"
                    android:background="@drawable/roundedbuttonrefreshfeed"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/searchInMainLinearLayout">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:id="@+id/searchListView"
            android:divider ="#616161"
            android:visibility="invisible"
            android:dividerHeight="1dp">
        </ListView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#e0f2f1"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_navigation_drawer"
        app:menu="@menu/activity_navigation_drawer_drawer"
        />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_Left"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="110dp"
        android:layout_gravity="end"
        android:background="#e0f2f1"
        android:fitsSystemWindows="true"
        app:menu="@menu/navigation_main_menu"
        />

</android.support.v4.widget.DrawerLayout>


